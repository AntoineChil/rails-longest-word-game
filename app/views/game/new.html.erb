<h1>New game</h1>
<div class="d-flex">
  <% @letters.each do |letter| %>
    <div class="letter me-3 text-center p-3 shadow-sm border text-white"><%= letter %></div>
  <% end %>
  </div>
<form class="form-inline" action="/score" methode="POST" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  <p class="my-3">What is the longest word you can find?</p>
  <div class="input-group">
    <input type="text" class="form-control" name="word">
    <input type="submit" value="Play" class="btn btn-default border">
</form>
